# Use an official PHP runtime as a parent image
FROM php:8.2-fpm

# Set environment variables
ENV TZ=Australia/Brisbane

# Set maintainer information
LABEL maintainer="JaeWon Yun jaewon.yun@uqconnect.edu.au"

# Install necessary packages and php packages
RUN apt-get update \
        && apt-get install -y \
        && docker-php-ext-install mysqli \
        && pecl install redis \
        && docker-php-ext-enable redis \
        && apt-get update && apt-get install -y libicu-dev \
        && docker-php-ext-configure intl \
        && docker-php-ext-install intl \
        && apt-get update \
        && docker-php-ext-install pdo_mysql

WORKDIR /var/www/htdocs

# Copy composer.json, composer.lock and the composer installer to the WORKDIR
COPY composer.json composer.lock installer ./

# Install Composer
RUN php installer --install-dir=/usr/local/bin --filename=composer

# Install project dependencies
RUN composer install --no-scripts --no-autoloader
RUN composer dump-autoload --optimize && composer run-script post-install-cmd

RUN chmod -R 777 /var/www/htdocs

EXPOSE 9000

CMD ["php-fpm"]
